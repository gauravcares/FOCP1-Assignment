#include <stdio.h>
#include <math.h>
int main(){
   int n,i,j,d,d1;
   // DELETION OF AN ARRAY AT ANY POSITION IN ARRAY
   printf("how long your array : ");
   scanf("%d",&n);
   int m[n];
   // LOOP FOR TELLING THE NUMNBER OF AN ARRAY
   for(i=0;i<n;i++){
      printf("the number for %d index is ",i);
      scanf("%d",&m[i]);
   }
   // AKSING WHICH NUMBER YOU WANT TO DELETE
   printf("\nTELL THE INDEX YOU WANT TO DELETE IN A NEW ARRAY : ");
   scanf("%d",&d);
   // AND STORING IT IN ANOTHER ARRAY FOLLOWED BY THE PATTERN
   for(i=d;i<=n;i++){ // SHIFTING THEM TO 1 POSITION ON LEFT
      m[i]=m[i+1];
   }
   for(i=0;i<n-1;i++){
      printf("%d ",m[i]);
   }
   return 0;
}
