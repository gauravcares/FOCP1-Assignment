#include <stdio.h>
int main(){
   // describing the first occurance of the numbers
    printf("printing the array and finding the number 99 from it ");
    int a,firnum=0;
    printf("\nenter the number of wlements you want to enter in an array \n");
    scanf("%d",&a);
   int n[a];
   for(int i=0;i<a;i++){
      printf("enter the %d index number ",i);
      scanf("%d",&n[i]);
      if(n[i]==99)
      firnum=i;
      continue;
   }
   printf("the first occurance of number 99 is at index %d",firnum);
   return 0;
}
