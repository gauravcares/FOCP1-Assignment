#include <stdio.h>
#include <math.h>
int main(){
   int n,i,j,d=1,count=0;
   // finding the maximum and minimum of the array
   printf("how long your array : ");
   scanf("%d",&n);
   int m[n];
   // LOOP FOR TELLING THE NUMNBER SOF AN ARRAY
   for(i=0;i<n;i++){
      printf("the number for %d index is ",i);
      scanf("%d",&m[i]);
   }
  // CHECKING FOR PEAK ELEMEMTS 
  for(i=0;i<n;i++){
   if((i==0 &&(m[i]>=m[i+1])) || (i==n-1 &&(m[i]>=m[i-1])) || (i>0 && i<n-1 && (m[i]>=m[i+1]) &&(m[i]>=m[i-1])) )
   printf("%d, ",m[i]);
  }
   return 0;
}
