#include <stdio.h>
#include <math.h>
int main(){
   int n,max,min;
   // finding the maximum and minimum of the array
   printf("how long your array : ");
   scanf("%d",&n);
   int m[n];
   for(int i=0;i<n;i++){
      printf("the nuumber for %d index is ",i);
      scanf("%d",&m[i]);
      max=m[0];
      min=m[0];
      if(m[i]>max){
         max=m[i];
      }
      if(m[i]<min){
         min=m[i];
      }
   }
   printf("%d is the maximum number \n",max);
      printf("%d is the minimum number ",min);
   return 0;
}
