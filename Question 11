#include <stdio.h>
#include <math.h>
int main(){
   int n,o;
   // seperating two number from a given array
   printf("enter the numbers for an array ");
   scanf("%d",&n);
   int counte=0,counto=0;
   int m[n],even[n],odd[n];
   for(int i=0;i<n;i++){
    printf("the number for %d index is :",i);
    scanf("%d",&m[i]);
    if(m[i]%2==0){
    even[counte]=m[i];
    counte++;
    }
    else{
      odd[counto]=m[i];
      counto++;
    }
   }
    printf("\nEVEN NUMBERS [%d]: ",counte);
   for(int i=0;i<counte;i++){
      printf("%d ",even[i]);
   }
   printf("\nODD NUMBERS [%d]: ",counto);
   for(int i=0;i<counto;i++){
      printf("%d ",odd[i]);
   }
   return 0;
}
